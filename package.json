{
  "name": "@jszkl/cronify",
  "version": "0.1.0",
  "description": "🕐 Convert natural language to cron expressions. Write \"every monday at 9am\" instead of \"0 9 * * 1\"",
  "keywords": [
    "cron",
    "schedule",
    "natural-language",
    "nlp",
    "parser",
    "scheduling",
    "crontab",
    "time"
  ],
  "author": "James Szklarz",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jszklarz/cronify.git"
  },
  "bugs": {
    "url": "https://github.com/jszklarz/cronify/issues"
  },
  "homepage": "https://github.com/jszklarz/cronify#readme",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "packageManager": "pnpm@10.17.1",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "tsc --noEmit",
    "prepublishOnly": "pnpm run build",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18"
  }
}